<!--
  SECTION: How It Works
  PURPOSE: Three-step process overview
  DEPENDENCIES: Lucide icons
  UPDATED: 2025-11-05
-->
<section id="get-started" class="py-20 bg-gradient-to-br from-red-50 to-yellow-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <!-- Mobile heading (hidden on desktop) -->
            <h2 class="md:hidden text-3xl font-bold text-gray-900 mb-4">{{t 'howItWorks.title.mobile'}}</h2>
            <!-- Desktop heading (hidden on mobile) -->
            <h2 class="hidden md:block text-4xl font-bold text-gray-900 mb-4">{{t 'howItWorks.title.desktop'}}</h2>
            <p class="text-xl text-gray-600">{{t 'howItWorks.subtitle'}}</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
            <div class="fade-in card-hover bg-white rounded-xl shadow-lg p-6 md:p-8 text-center hover:shadow-xl transition">
                <div class="w-16 h-16 md:w-18 md:h-18 gradient-bg rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4">
                    <span class="text-2xl md:text-3xl font-bold text-white">{{t 'howItWorks.step1.number'}}</span>
                </div>
                <h3 class="text-lg md:text-2xl font-bold text-gray-900 mb-2 md:mb-3">{{t 'howItWorks.step1.title'}}</h3>
                <p class="text-sm md:text-base text-gray-600 mb-3 md:mb-4">{{t 'howItWorks.step1.subtitle'}}</p>
                <p class="text-sm md:text-base text-gray-700 leading-relaxed">{{t 'howItWorks.step1.description'}}</p>
                <a href="/{{lang}}/degree-check.html" class="inline-flex items-center justify-center mt-4 px-4 py-2 min-h-[44px] text-red-600 font-semibold hover:text-red-700 hover:bg-red-50 rounded-lg transition">
                    {{t 'howItWorks.step1.button'}}
                </a>
            </div>

            <div class="fade-in card-hover bg-white rounded-xl shadow-lg p-6 md:p-8 text-center hover:shadow-xl transition">
                <div class="w-16 h-16 md:w-18 md:h-18 gradient-bg rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4">
                    <span class="text-2xl md:text-3xl font-bold text-white">{{t 'howItWorks.step2.number'}}</span>
                </div>
                <h3 class="text-lg md:text-2xl font-bold text-gray-900 mb-2 md:mb-3">{{t 'howItWorks.step2.title'}}</h3>
                <p class="text-sm md:text-base text-gray-700 leading-relaxed">{{t 'howItWorks.step2.description'}}</p>
                <a href="/{{lang}}/visa-check.html" class="inline-flex items-center justify-center mt-4 px-4 py-2 min-h-[44px] text-red-600 font-semibold hover:text-red-700 hover:bg-red-50 rounded-lg transition">
                    {{t 'howItWorks.step2.button'}}
                </a>
            </div>

            <div class="fade-in card-hover bg-white rounded-xl shadow-lg p-6 md:p-8 text-center hover:shadow-xl transition">
                <div class="w-16 h-16 md:w-18 md:h-18 gradient-bg rounded-full flex items-center justify-center mx-auto mb-3 md:mb-4">
                    <span class="text-2xl md:text-3xl font-bold text-white">{{t 'howItWorks.step3.number'}}</span>
                </div>
                <h3 class="text-lg md:text-2xl font-bold text-gray-900 mb-2 md:mb-3">{{t 'howItWorks.step3.title'}}</h3>
                <p class="text-sm md:text-base text-gray-700 leading-relaxed">{{t 'howItWorks.step3.description'}}</p>
                <a href="https://docs.google.com/forms/d/1LcyfLhhQoBr2FyHhsk9DyxHymTxrGn1tPZw3hFZQl_M/viewform" target="_blank" class="inline-flex items-center justify-center mt-4 px-4 py-2 min-h-[44px] text-red-600 font-semibold hover:text-red-700 hover:bg-red-50 rounded-lg transition">
                    {{t 'howItWorks.step3.button'}}
                </a>
            </div>
        </div>
    </div>
</section>
