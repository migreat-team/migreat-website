<!--
  SECTION: CTA (Call to Action)
  PURPOSE: Final conversion section
  DEPENDENCIES: Lucide icons
  UPDATED: 2025-11-05
-->
<section class="py-20 gradient-bg text-white">
    <div class="max-w-7xl mx-auto px-5 sm:px-6 lg:px-8 text-center">
        <!-- Desktop: Show full content -->
        <div class="hidden md:block">
            <h2 class="text-2xl md:text-4xl font-bold mb-4 md:mb-6 text-white leading-tight">{{t 'cta.title'}}</h2>
            <p class="text-base md:text-xl mb-6 md:mb-8 max-w-2xl mx-auto text-white leading-relaxed">{{t 'cta.description'}}</p>

            <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center max-w-xl mx-auto">
                <a href="https://docs.google.com/forms/d/1LcyfLhhQoBr2FyHhsk9DyxHymTxrGn1tPZw3hFZQl_M/viewform" target="_blank" class="w-full sm:w-auto inline-flex items-center justify-center px-6 md:px-8 py-3 md:py-4 bg-white text-gray-900 font-semibold rounded-lg hover:bg-gray-100 transition text-base md:text-lg min-h-[48px]">
                    {{t 'cta.button.primary'}}
                    <i data-lucide="arrow-right" class="ml-2 h-5 w-5"></i>
                </a>
                <a href="/{{lang}}/contact.html" class="w-full sm:w-auto inline-flex items-center justify-center px-6 md:px-8 py-3 md:py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-gray-900 transition text-base md:text-lg min-h-[48px]">
                    {{t 'cta.button.secondary'}}
                </a>
            </div>
        </div>

        <!-- Mobile: Show only Get Started button -->
        <div class="md:hidden">
            <a href="https://docs.google.com/forms/d/1LcyfLhhQoBr2FyHhsk9DyxHymTxrGn1tPZw3hFZQl_M/viewform" target="_blank" class="w-full inline-flex items-center justify-center px-6 py-3 bg-white text-gray-900 font-semibold rounded-lg hover:bg-gray-100 transition text-base min-h-[48px]">
                {{t 'cta.button.primary'}}
                <i data-lucide="arrow-right" class="ml-2 h-5 w-5"></i>
            </a>
        </div>
    </div>
</section>
