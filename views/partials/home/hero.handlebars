<!--
  SECTION: Hero
  PURPOSE: Main landing section with value proposition and testimonial carousel
  DEPENDENCIES: Alpine.js, Lucide icons, heroCarousel() function
  UPDATED: 2025-11-05
-->
<section class="relative bg-gray-900 text-white py-20">
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-800 opacity-90"></div>
    <div class="absolute inset-0 bg-cover bg-center opacity-20" style="background-image: url('https://images.unsplash.com/photo-1467269204594-9661b134dd2b?auto=format&fit=crop&w=2000')"></div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
            <div class="space-y-4 md:space-y-6">
                <h1 class="text-4xl md:text-5xl font-bold mb-4 md:mb-6 text-white leading-tight">{{t 'hero.title'}}</h1>
                <p class="text-xl md:text-2xl mb-3 md:mb-4 text-white leading-relaxed">{{t 'hero.subtitle'}}</p>
                <p class="text-base md:text-xl text-gray-100 mb-6 md:mb-8 leading-relaxed">{{t 'hero.description'}}</p>

                <div class="flex flex-col sm:flex-row gap-3 md:gap-4 w-full">
                    <a href="/{{lang}}/visa-check.html" class="w-full sm:w-auto inline-flex items-center justify-center px-6 md:px-8 py-3 md:py-4 gradient-bg text-white font-semibold rounded-lg hover:opacity-90 transition text-base md:text-lg min-h-[48px]">
                        {{t 'hero.cta.visaCheck'}}
                        <i data-lucide="arrow-right" class="ml-2 h-5 w-5"></i>
                    </a>
                </div>
            </div>

            <div x-data="heroCarousel()" x-init="init()">
                <div class="relative carousel-container">
                    <!-- Testimonial Cards -->
                    <div class="carousel-wrapper">
                        <!-- Card 1: Priya Sharma (India - IT) -->
                        <div :class="currentSlide === 0 ? 'carousel-item active' : 'carousel-item'" class="w-full">
                            <div class="testimonial-card bg-white rounded-2xl shadow-2xl p-6 text-gray-900">
                                <div class="flex items-start space-x-4">
                                    <img src="/assets/images/priya-sharma-new.jpg" alt="{{t 'hero.testimonial.priya.name'}}" class="w-16 h-16 rounded-full object-cover">
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-lg">{{t 'hero.testimonial.priya.name'}}</h3>
                                        <p class="text-sm text-gray-600">{{t 'hero.testimonial.priya.role'}}</p>
                                        <div class="flex items-center gap-4 my-3">
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.before'}}</div>
                                                <div class="text-lg font-bold text-gray-700">{{t 'hero.testimonial.priya.before'}}</div>
                                            </div>
                                            <i data-lucide="arrow-right" class="h-5 w-5 text-red-600"></i>
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.after'}}</div>
                                                <div class="text-lg font-bold text-green-600">{{t 'hero.testimonial.priya.after'}}</div>
                                            </div>
                                        </div>
                                        <p class="text-sm italic text-gray-600">"{{t 'hero.testimonial.priya.quote'}}"</p>
                                        <div class="mt-3">
                                            <p class="text-xs text-red-600 font-medium">{{t 'hero.testimonial.priya.from'}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Card 2: Akosua Mensah (Ghana - Healthcare) -->
                        <div :class="currentSlide === 1 ? 'carousel-item active' : 'carousel-item'" class="w-full">
                            <div class="testimonial-card bg-white rounded-2xl shadow-2xl p-6 text-gray-900">
                                <div class="flex items-start space-x-4">
                                    <img src="/assets/images/akosua-mensah-new.jpg" alt="{{t 'hero.testimonial.akosua.name'}}" class="w-16 h-16 rounded-full object-cover">
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-lg">{{t 'hero.testimonial.akosua.name'}}</h3>
                                        <p class="text-sm text-gray-600">{{t 'hero.testimonial.akosua.role'}}</p>
                                        <div class="flex items-center gap-4 my-3">
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.before'}}</div>
                                                <div class="text-lg font-bold text-gray-700">{{t 'hero.testimonial.akosua.before'}}</div>
                                            </div>
                                            <i data-lucide="arrow-right" class="h-5 w-5 text-red-600"></i>
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.after'}}</div>
                                                <div class="text-lg font-bold text-green-600">{{t 'hero.testimonial.akosua.after'}}</div>
                                            </div>
                                        </div>
                                        <p class="text-sm italic text-gray-600">"{{t 'hero.testimonial.akosua.quote'}}"</p>
                                        <div class="mt-3">
                                            <p class="text-xs text-red-600 font-medium">{{t 'hero.testimonial.akosua.from'}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Card 3: Chidinma Okafor (Nigeria - Hospitality) -->
                        <div :class="currentSlide === 2 ? 'carousel-item active' : 'carousel-item'" class="w-full">
                            <div class="testimonial-card bg-white rounded-2xl shadow-2xl p-6 text-gray-900">
                                <div class="flex items-start space-x-4">
                                    <img src="/assets/images/chidinma-okafor-new.jpg" alt="{{t 'hero.testimonial.chidinma.name'}}" class="w-16 h-16 rounded-full object-cover">
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-lg">{{t 'hero.testimonial.chidinma.name'}}</h3>
                                        <p class="text-sm text-gray-600">{{t 'hero.testimonial.chidinma.role'}}</p>
                                        <div class="flex items-center gap-4 my-3">
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.before'}}</div>
                                                <div class="text-lg font-bold text-gray-700">{{t 'hero.testimonial.chidinma.before'}}</div>
                                            </div>
                                            <i data-lucide="arrow-right" class="h-5 w-5 text-red-600"></i>
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.after'}}</div>
                                                <div class="text-lg font-bold text-green-600">{{t 'hero.testimonial.chidinma.after'}}</div>
                                            </div>
                                        </div>
                                        <p class="text-sm italic text-gray-600">"{{t 'hero.testimonial.chidinma.quote'}}"</p>
                                        <div class="mt-3">
                                            <p class="text-xs text-red-600 font-medium">{{t 'hero.testimonial.chidinma.from'}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Card 4: Wanjiru Kamau (Kenya - Early Childhood Education) -->
                        <div :class="currentSlide === 3 ? 'carousel-item active' : 'carousel-item'" class="w-full">
                            <div class="testimonial-card bg-white rounded-2xl shadow-2xl p-6 text-gray-900">
                                <div class="flex items-start space-x-4">
                                    <img src="/assets/images/wanjiru-kamau-new.jpg" alt="{{t 'hero.testimonial.wanjiku.name'}}" class="w-16 h-16 rounded-full object-cover">
                                    <div class="flex-1">
                                        <h3 class="font-semibold text-lg">{{t 'hero.testimonial.wanjiku.name'}}</h3>
                                        <p class="text-sm text-gray-600">{{t 'hero.testimonial.wanjiku.role'}}</p>
                                        <div class="flex items-center gap-4 my-3">
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.before'}}</div>
                                                <div class="text-lg font-bold text-gray-700">{{t 'hero.testimonial.wanjiku.before'}}</div>
                                            </div>
                                            <i data-lucide="arrow-right" class="h-5 w-5 text-red-600"></i>
                                            <div>
                                                <div class="text-sm text-gray-500">{{t 'hero.salary.after'}}</div>
                                                <div class="text-lg font-bold text-green-600">{{t 'hero.testimonial.wanjiku.after'}}</div>
                                            </div>
                                        </div>
                                        <p class="text-sm italic text-gray-600">"{{t 'hero.testimonial.wanjiku.quote'}}"</p>
                                        <div class="mt-3">
                                            <p class="text-xs text-red-600 font-medium">{{t 'hero.testimonial.wanjiku.from'}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
