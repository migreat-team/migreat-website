                <a href="/{{lang}}/#why-germany" class="nav-link text-gray-700 hover:text-red-600 font-medium">{{t 'nav.whyGermany'}}</a>
                <a href="/{{lang}}/degree-check.html" class="nav-link text-gray-700 hover:text-red-600 font-medium">{{t 'nav.degreeRecognition'}}</a>
                <a href="/{{lang}}/visa-check.html" class="nav-link text-gray-700 hover:text-red-600 font-medium">{{t 'nav.visaCheck'}}</a>
                <a href="https://docs.google.com/forms/d/1LcyfLhhQoBr2FyHhsk9DyxHymTxrGn1tPZw3hFZQl_M/viewform" target="_blank" rel="noopener noreferrer" class="nav-link text-gray-700 hover:text-red-600 font-medium">{{t 'nav.getStarted'}}</a>
