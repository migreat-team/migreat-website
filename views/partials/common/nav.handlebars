            <div class="md:hidden flex items-center">
                <button @click="mobileMenuOpen = !mobileMenuOpen" class="text-gray-700" aria-label="{{t 'nav.toggleMenu'}}">
                    <i data-lucide="menu" class="h-6 w-6"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Navigation -->
    <div x-show="mobileMenuOpen" x-cloak class="md:hidden bg-white border-t">
        <div class="px-4 pt-2 pb-3 space-y-1">
            <a href="/{{lang}}/#services" class="block px-4 py-3 text-base text-gray-700 hover:bg-gray-50 rounded-lg transition min-h-[44px] flex items-center">{{t 'nav.services'}}</a>
