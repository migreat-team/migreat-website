<!DOCTYPE html>
<html lang="{{lang}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{t 'contact.title'}}</title>
    <link rel="icon" type="image/x-icon" href="/assets/images/favicon.ico">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #dc2626 0%, #eab308 100%);
        }
    </style>
</head>
<body class="bg-gray-50">
    <!-- Navigation Component -->
    <div id="nav-container"></div>

    <!-- Contact Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">{{t 'contact.heading'}}</h1>
            <p class="text-xl text-gray-600">{{t 'contact.subheading'}}</p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Information -->
            <div class="space-y-8">
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-6">{{t 'contact.info.heading'}}</h2>

                    <!-- Office Address -->
                    <div class="flex items-start mb-6">
                        <div class="flex-shrink-0">
                            <i data-lucide="map-pin" class="h-6 w-6 text-red-600"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">{{t 'contact.address.heading'}}</h3>
                            <p class="text-gray-600">
                                {{t 'contact.address.line1'}}<br>
                                {{t 'contact.address.line2'}}<br>
                                {{t 'contact.address.line3'}}<br>
                                {{t 'contact.address.line4'}}
                            </p>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="flex items-start mb-6">
                        <div class="flex-shrink-0">
                            <i data-lucide="mail" class="h-6 w-6 text-red-600"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">{{t 'contact.email.heading'}}</h3>
                            <a href="mailto:{{t 'contact.email.address'}}" class="text-red-600 hover:text-red-700">
                                {{t 'contact.email.address'}}
                            </a>
                        </div>
                    </div>

                    <!-- WhatsApp -->

                    <!--
                    <div class="flex items-start mb-6">
                        <div class="flex-shrink-0">
                            <i data-lucide="message-circle" class="h-6 w-6 text-red-600"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">{{t 'contact.whatsapp.heading'}}</h3>
                            <a href="https://wa.me/491234567890" target="_blank" class="text-red-600 hover:text-red-700">
                                {{t 'contact.whatsapp.number'}}
                            </a>
                            <p class="text-sm text-gray-500 mt-1">{{t 'contact.whatsapp.cta'}}</p>
                        </div>
                    </div>
                    -->

                    <!-- Office Hours -->
                    <div class="flex items-start">
                        <div class="flex-shrink-0">
                            <i data-lucide="clock" class="h-6 w-6 text-red-600"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">{{t 'contact.hours.heading'}}</h3>
                            <p class="text-gray-600">
                                {{t 'contact.hours.weekday'}}<br>
                                {{t 'contact.hours.saturday'}}<br>
                                {{t 'contact.hours.sunday'}}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-gradient-to-r from-red-50 to-yellow-50 rounded-lg p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">{{t 'contact.quick.heading'}}</h3>
                    <div class="space-y-3">
                        <a href="/{{lang}}/visa-check" class="flex items-center text-gray-700 hover:text-red-600 transition">
                            <i data-lucide="check-circle" class="h-5 w-5 mr-3"></i>
                            {{t 'contact.quick.visa'}}
                        </a>
                        <a href="/{{lang}}/degree-check" class="flex items-center text-gray-700 hover:text-red-600 transition">
                            <i data-lucide="graduation-cap" class="h-5 w-5 mr-3"></i>
                            {{t 'contact.quick.degree'}}
                        </a>
                        <a href="https://docs.google.com/forms/d/1LcyfLhhQoBr2FyHhsk9DyxHymTxrGn1tPZw3hFZQl_M/viewform" target="_blank" class="flex items-center text-gray-700 hover:text-red-600 transition">
                            <i data-lucide="file-text" class="h-5 w-5 mr-3"></i>
                            {{t 'contact.quick.survey'}}
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-2xl font-bold text-gray-900 mb-6">{{t 'contact.form.heading'}}</h2>

                <!-- https://docs.google.com/forms/d/1LcyfLhhQoBr2FyHhsk9DyxHymTxrGn1tPZw3hFZQl_M/viewform -->
                <form action="mailto:migreatgermany@gmail.com" target="_blank" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">{{t 'contact.form.name'}}</label>
                        <input type="text" id="name" name="name" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600 focus:border-transparent">
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">{{t 'contact.form.email'}}</label>
                        <input type="email" id="email" name="email" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600 focus:border-transparent">
                    </div>

                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">{{t 'contact.form.subject'}}</label>
                        <select id="subject" name="subject" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600 focus:border-transparent">
                            <option value="">{{t 'contact.form.subject.default'}}</option>
                            <option value="visa">{{t 'contact.form.subject.visa'}}</option>
                            <option value="degree">{{t 'contact.form.subject.degree'}}</option>
                            <option value="language">{{t 'contact.form.subject.language'}}</option>
                            <option value="job">{{t 'contact.form.subject.job'}}</option>
                            <option value="general">{{t 'contact.form.subject.general'}}</option>
                            <option value="other">{{t 'contact.form.subject.other'}}</option>
                        </select>
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-2">{{t 'contact.form.message'}}</label>
                        <textarea id="message" name="message" rows="5" required
                                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600 focus:border-transparent"></textarea>
                    </div>

                    <button type="submit" class="w-full gradient-bg text-white font-semibold py-3 px-6 rounded-lg hover:opacity-90 transition">
                        {{t 'contact.form.submit'}}
                    </button>

                    <p class="text-sm text-gray-500 text-center">
                        {{t 'contact.form.email.direct'}} <a href="mailto:{{t 'contact.email.address'}}" class="text-red-600 hover:text-red-700">{{t 'contact.email.address'}}</a>
                    </p>
                </form>
            </div>
        </div>

        <!-- Map Section (Optional) -->
        <!--
        <div class="mt-16">
            <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">{{t 'contact.map.heading'}}</h2>
            <div class="bg-gray-200 rounded-lg h-96 flex items-center justify-center">
                <div class="text-center">
                    <i data-lucide="map" class="h-20 w-16 text-gray-400 mx-auto mb-4"></i>
                    <p class="text-gray-600">{{t 'contact.map.address'}}</p>
                    <a href="https://www.google.com/maps/search/FriedrichstraÃŸe+123,+10117+Berlin" target="_blank"
                       class="inline-block mt-4 text-red-600 hover:text-red-700 font-semibold">
                        {{t 'contact.map.cta'}}
                    </a>
                </div>
            </div>
        </div>
        -->
    </div>
    
    <!-- Footer Component -->
    <div id="footer-container"></div>

    <script src="/assets/js/component-loader.js"></script>
    <script>
        // Initialize Lucide icons
        lucide.createIcons();
    </script>
</body>
</html>
